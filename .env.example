# Environment Configuration
ENVIRONMENT=development

# API Configuration
API_URL=http://localhost:8001

# CORS Configuration (for production)
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Nova Poshta API
NOVA_POSHTA_API_KEY=your_nova_poshta_api_key_here

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
# For Telegram Login callback (base URL of this API, e.g. https://app.dikoros.ua)
PUBLIC_BASE_URL=
# App deep link scheme for redirect after Telegram login (e.g. com.dikorosua.app)
APP_SCHEME=com.dikorosua.app

# Monobank Payment (optional)
MONOBANK_API_TOKEN=your_monobank_api_token_here

# OpenAI API (for chat feature)
OPENAI_API_KEY=your_openai_api_key_here
